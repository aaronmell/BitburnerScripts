{
    "include": [
      "NetscriptDefinitions.d.ts",
      "global.d.ts",
      "src/**/*",
      "tests"
    ],
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "sourceRoot": "http://localhost:8000/sources/",
      "strict": true,
      "rootDir": "./",
      "outDir": "dist/",
      "baseUrl": "./",
      "paths": {
        "/*": [
          "*"
        ],
        "@ns": [
          "../NetscriptDefinitions.d.ts"
        ]
      }
    },
    "exclude": [
      "./dist",
      "./node_modules/**/*"
    ]
  }