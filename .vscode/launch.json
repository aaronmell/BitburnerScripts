    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "runtimeArgs": [
                "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
                "--timeout", "999999",
                "-p", "${workspaceFolder}/tsconfig.json", "${workspaceFolder}/tests/**/*.ts",
            ],
            "console": "integratedTerminal",
        }
    ]
}